@using ChefsKiss.Web.Areas.Recipes.Models.Recipes
@using ChefsKiss.Web.Areas.Recipes.Models.Reviews
@using ChefsKiss.Web.Infrastructure.Extensions;

@model RecipeDetailsViewModel

<div class="container">
    <div class="row">
        <div class="col-md-12 row-md-12">
            <div class="row">
                <h1 class="card-title text-center mx-auto">
                    @Model.Title
                </h1>
            </div>
            <hr>
            <div class="row">
                <img class="card-img-top col-sm-12 col-md-6" src="@Model.ImageUrl">
                <div class="col-sm-12 col-md-6">
                    <h3>Ingredients:</h3>
                    <ol>
                        @foreach (var ingredient in Model.Ingredients)
                        {
                            <li class="p-1 m-1">
                                <a asp-controller="ingredients" asp-action="details" asp-route-id="@ingredient.Id" class="animate-underline">
                                    @ingredient.Name - @ingredient.Quantity @ingredient.MeasurementUnit
                                </a>
                            </li>
                        }
                    </ol>
                </div>
            </div>
            <hr>
            <div class="row">
                <p class="card-text">
                    <span class="span"> Written by:
                        <a asp-area="Identity" asp-controller="Users" asp-action="Details" asp-route-id="@Model.AuthorId" class="animate-underline">
                            <span> @Model.AuthorFullName (@Model.AuthorUsername) </span>
                        </a>
                    </span>
                </p>
            </div>
        </div>
    </div>
    <br>
    <div class="row">
        @Model.Content
    </div>

    @if (Model.UserIsAuthor || User.IsAdmin())
    {
        <br>
        <div class="row">
            <div class="edit-panel card card-body border border-success flex-row p-1 col-4 mx-auto">
                <a class="btn btn-primary fa fa-edit col-6" asp-action="Edit" asp-route-id="@Model.Id"></a>
                <a class="btn btn-danger fa fa-trash col-6" asp-action="Delete" asp-route-id="@Model.Id"></a>
            </div>
        </div>
    }

    <br>
    <div class="row">
        @if (User.Identity.IsAuthenticated && @Model.UserHasPostedReview == false)
        {
            <partial name="_ReviewFormPartial" model=@(new ReviewFormModel{ RecipeId = Model.Id }) />
        }
        @foreach (var review in Model.Reviews)
        {
            <partial name="_ReviewsListPartial" model="review" />
        }
    </div>
</div>
