@using Microsoft.AspNetCore.Identity
@using ChefsKiss.Data.Models;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark animate-zoom-md" asp-area="Identity" asp-controller="Users" asp-action="Profile" title="Profile">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark animate-zoom-md" asp-area="" asp-controller="Favorites" asp-action="Mine">Favorites</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark animate-zoom-md" asp-area="Identity" asp-controller="Users" asp-action="Logout">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark animate-zoom-md" asp-area="Identity" asp-controller="Users" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark animate-zoom-md" asp-area="Identity" asp-controller="Users" asp-action="Login">Login</a>
        </li>
    }
</ul>
