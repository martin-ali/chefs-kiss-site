@model RecipesSearchViewModel;

<h2 class="text-center display-4">Recipes containing "@Model.SearchTerm"</h2>
<hr>
<div id="recipes-list" class="row mx-auto">
    @foreach (var recipe in Model.Recipes)
    {
        <partial name="_RecipeListPartialCard" model="recipe" />
    }
</div>

@section Scripts{
<partial name="_InfiniteScrollScriptsPartial" />
<script>
    ConfigureInfiniteScroll('/Recipes/PagedBySearchTerm', 1, { searchTerm: '@Model.SearchTerm' });
</script>
}
