@using ChefsKiss.Web.Areas.Recipes.Models.Reviews

@model ReviewListViewModel

<div class="col-sm-12 col-md-6 col-lg-4 p-0">
    <article class="animate-outline card card-body m-1">
        <partial name="_RatingBarPartial" model="@Model.Rating" />
        <p>@Model.Summary...
            <a asp-area="recipes" asp-controller="reviews" asp-action="details" asp-route-id="@Model.Id" class="animate-underline">Read More </a>
        </p>
        <h6>
            <a asp-area="Identity" asp-controller="Users" asp-action="Details" asp-route-id="@Model.AuthorId" class="animate-underline">
                @Model.AuthorUsername
            </a>
            <span class="text-secondary">posted on: @Model.CreatedOn.ToString("dd/MM/yyyy")</span>
        </h6>
        @if (User.IsAdmin())
        {
            <a class="btn btn-danger fa fa-trash delete-review" asp-controller="Reviews" asp-action="Delete" asp-route-id="@Model.Id" asp-route-recipeId="@Model.RecipeId"></a>
        }
    </article>
</div>
