@using ChefsKiss.Web.Areas.Recipes.ViewModels.Comments

@model CommentListViewModel

<div class="w-100 card card-body m-2">
    <p>@Model.Content</p>
    <a asp-area="Identity" asp-controller="Users" asp-action="Details" asp-route-id="@Model.AuthorId">
        <h6 class="h6"> @Model.AuthorUsername
            <span class="text-secondary">(Posted on: @Model.CreatedOn.ToString("dd/MM/yyyy"))</span>
        </h6>
    </a>
</div>
