@model RecipeDeleteModel

@{
    ViewBag.Title = "Delete recipe";
}

<div class="container card card-body">
    <div class="row">
        <h2 class="text-center col-md-12">@ViewBag.Title</h2>
    </div>
    <div class="row">
        <img class="w-100 card-img" src="@Model.ImageSrc">
    </div>
    <div class="row">
        <input type="hidden" id="ingredients-count" value="@Model.Ingredients.Count()" />
        <form method="post" class="col-md-12">
            <div class="row">
                <label asp-for="Title"></label>
                <input disabled asp-for="Title" class="form-control w-100" placeholder="Enter the name here" />
            </div>
            <div class="row">
                <label asp-for="Content"></label>
                <textarea disabled rows="10" asp-for="Content" class="form-control" placeholder="Enter the content here"></textarea>
            </div>
            <div class="row">
                <label asp-for="Category"></label>
                <select disabled asp-for="Category" class="form-control">
                    <option value="@Model.Category.Id">@Model.Category.Name</option>
                </select>
            </div>
            <div class="row">
                <label asp-for="Ingredients"></label>
                <div id="ingredients-container" class="col-12">
                    @foreach (var ingredient in Model.Ingredients)
                    {
                        <partial aria-disabled="true" name="_IngredientDeletePartial" model="@ingredient" />
                    }
                </div>
            </div>
            <br />
            <div class="row">
                <button class="btn btn-danger" type="submit">Delete</button>
            </div>
        </form>
    </div>
</div>
