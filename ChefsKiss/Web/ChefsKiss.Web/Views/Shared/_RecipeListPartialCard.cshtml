@model RecipeListViewModel

<div class="col-sm-12 col-md-6 col-lg-4 mb-4">
    <article class="animate-zoom-sm animate-outline card p-0">
        <a asp-area="" asp-controller="Recipes" asp-action="Details" asp-route-id="@Model.Id">
            <div class="embed-responsive embed-responsive-4by3">
                <img class="card-img-top embed-responsive-item" src="@Model.ImageSrc" alt="Recipe image">
            </div>
        </a>
        <div class="card-body">
            <a asp-area="" asp-controller="Recipes" asp-action="Details" asp-route-id="@Model.Id" class="text-decoration-none">
                <h4 class="card-title text-body">@Model.Title</h4>
            </a>
            <partial name="_RatingBarPartial" model="@Model.Rating" />
            <p class="card-text text-body text-danger">@Model.Summary...
                <a asp-area="" asp-controller="Recipes" asp-action="Details" asp-route-id="@Model.Id" class="animate-underline">Read More</a>
            </p>
            <span class="card-subtitle">
                By
                <a asp-area="Identity" asp-controller="Users" asp-action="Details" asp-route-id="@Model.AuthorId" class="text-decoration-none">
                    <span class="animate-underline"> @Model.AuthorFullName</span>
                </a>
                |
                <a asp-area="" asp-controller="Categories" asp-action="Details" asp-route-id="@Model.CategoryId" class="text-decoration-none">
                    <span class="animate-underline"> @Model.Category</span>
                </a>
            </span>
        </div>
    </article>
</div>
