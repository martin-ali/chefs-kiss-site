@model IEnumerable<RecipeListViewModel>

@{
    ViewData["Title"] = "Home Page";
    var activeCarouselItem = "active";
    var activeCarouselIndicator = "active";
}

<h1 class="display-3 text-center">Welcome to Chef's Kiss!</h1>
<h2 class="display-4 text-center">Enjoy some of our most popular recipes</h2>
<hr>
@* Most popular *@
<div id="carouselIndicators" class="carousel slide shadow" data-ride="carousel">
    <ol class="carousel-indicators">
        @for (int current = 0; current < Model.Count(); current++)
        {
            <li data-target="#carouselIndicators" data-slide-to="@current" class="@activeCarouselIndicator"></li>
            activeCarouselIndicator = string.Empty;
        }
    </ol>
    <div class="carousel-inner">
        @foreach (var recipe in Model)
        {
            <div class="carousel-item @activeCarouselItem">
                <a asp-controller="Recipes" asp-action="Details" asp-route-id="@recipe.Id">
                    <img style="height: 600px; width:100%;" class="d-block w-100" src="@recipe.ImageSrc" alt="First slide">
                    <div class="carousel-caption">
                        <h5>@recipe.Title</h5>
                        <p class="d-md-block d-none">@recipe.Summary</p>
                    </div>
                </a>
            </div>

            activeCarouselItem = string.Empty;
        }
    </div>
    <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

