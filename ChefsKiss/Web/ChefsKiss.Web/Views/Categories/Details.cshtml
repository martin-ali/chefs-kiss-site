@model CategoryDetailsViewModel

@{
    ViewBag.Title = "Category details";
}

<h2 class="text-center display-4">Recipes with category: @Model.Name</h2>
<hr>
<div id="recipes-list" class="row mx-auto">
    @foreach (var recipe in Model.Recipes)
    {
        <partial name="_RecipeListPartialCard" model="recipe" />
    }
</div>

@section Scripts{
<partial name="_InfiniteScrollScriptsPartial" />
<script>
    ConfigureInfiniteScroll('/RecipesPaging/ByCategoryId', 1, { categoryId: @Model.Id });
</script>
}
