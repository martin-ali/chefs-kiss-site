@model IEnumerable<FavoritesListViewModel>

<h2 class="text-center">My favorites</h2>
<hr>

<div id="recipes-list" class="row mx-auto">
    @if (Model.Count() == 0)
    {
        <h2 class="mx-auto">No favorites yet</h2>
    }
    else
    {
        @foreach (var favorite in Model)
        {
            <partial name="_RecipeListPartialCard" model="favorite.Recipe" />
        }
    }
</div>
