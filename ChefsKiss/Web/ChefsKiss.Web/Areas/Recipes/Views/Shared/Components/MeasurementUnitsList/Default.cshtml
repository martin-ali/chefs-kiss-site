@using ChefsKiss.Web.Areas.Recipes.Models.MeasurementUnits

@model MeasurementUnitsComponentModel

@foreach (var unit in Model.Units)
{
    var isSelected = unit.Id == Model.Selected ? "selected" : string.Empty;

    @* NOTE: Added ! so it's not considered a tag helper. The tag helper variant does not allow C# inside it' *@
    <!option value="@unit.Id" @isSelected>@unit.Name</!option>
}
